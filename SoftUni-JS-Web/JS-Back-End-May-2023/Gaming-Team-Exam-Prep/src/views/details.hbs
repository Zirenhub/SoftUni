<main id='details'>
  <section id='details-info'>
    <div class='game-image'>
      <img src='{{offer.image}}' />
    </div>

    <div class='game-info'>
      <div class='game-text'>
        <h1 id='name'>{{offer.name}}</h1>
        <h3 id='platform'>Platform: {{offer.platform}}</h3>
        <p id='price'><span>Price: ${{offer.price}}</span></p>
        <p id='genre'><span>Genre: {{offer.genre}}</span></p>
        <p id='description'>{{offer.description}}</p>
      </div>
      <div class='product-btn'>
        {{#if isAuthenticated}}
          {{#if isOwner}}
            <!--Only for registered user and author of the publication -->
            <div class='author'>
              <a href='/offer/edit/{{offer._id}}' class='btn-edit'>Edit</a>
              <a
                href='/offer/delete/{{offer._id}}'
                class='btn-delete'
              >Delete</a>
            </div>
          {{else}}
            {{#if boughtOffer}}
              <!-- Logged in user who has already buy this game code-->
              <p class='buy-message'>You have already bought this game</p>

            {{else}}
              <!-- Logged in user who has not yet buy this game code-->
              <a href='/offer/buy/{{offer._id}}' class='btn-buy'>Buy</a>
            {{/if}}
          {{/if}}
        {{/if}}

      </div>
    </div>
  </section>
</main>